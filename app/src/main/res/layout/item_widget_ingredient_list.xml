<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_tv_ingredient_quantity"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/widget_tv_ingredient_measure"
        android:layout_width="wrap_content"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_marginStart="2dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_tv_ingredient_quantity"/>

    <TextView
        android:id="@+id/widget_tv_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_toEndOf="@id/widget_tv_ingredient_measure"/>
</RelativeLayout>
